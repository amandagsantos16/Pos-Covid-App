<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PosCovid" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">#9AA5B1</item>
        <item name="android:background">@drawable/background_edittext</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_botao_principal</item>
        <item name="android:width">235dp</item>
        <item name="android:height">55dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator" tools:targetApi="l">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_botao_secundario</item>
        <item name="android:width">235dp</item>
        <item name="android:height">55dp</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:stateListAnimator" tools:targetApi="l">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>